<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_shmatton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SAVE"
        app:layout_constraintTop_toBottomOf="@+id/email"
        android:layout_margin="20dp" />

    <EditText
        android:id="@+id/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text=""
        app:layout_constraintTop_toTopOf="parent"
     />
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/edit_text"
        android:layout_margin="20dp"
        android:text=""
        />

    <Button
        android:id="@+id/button_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
      app:layout_constraintTop_toBottomOf="@id/button_shmatton"
        android:text="fragment"/>
    <Button
        android:id="@+id/button_single_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        app:layout_constraintTop_toBottomOf="@id/button_fragment"
        android:text="Single Choice"/>

    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/button_shmatton"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="340dp" />
    <TextView
        android:id="@+id/currentVolumeTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Volume"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/button_single_choice"
        android:layout_margin="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="Current Volume: 50%"



    />
</androidx.constraintlayout.widget.ConstraintLayout>