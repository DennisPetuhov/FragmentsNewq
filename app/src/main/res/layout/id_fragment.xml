<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/fourth_fragment_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:text="TextView"
        android:textSize="32sp"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="388dp"
        tools:layout_editor_absoluteY="435dp" />

    <TextView
        android:id="@+id/fourth_fragment_email"
        app:layout_constraintTop_toBottomOf="@id/fourth_fragment_name"
        android:layout_margin="150dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="32sp"
        android:textColor="@color/black"
        tools:layout_editor_absoluteX="412dp"
        tools:layout_editor_absoluteY="803dp" />
</androidx.constraintlayout.widget.ConstraintLayout>